<div class="container">
  <h1 class="mb-4">Listado de productos</h1>

  <!-- Filtros y ordenamiento -->
  <form method="GET" action="/products" class="row g-3 mb-4">
    <div class="col-md-4">
      <label class="form-label">Categoría</label>
      <select class="form-select" name="query">
        <option value="">Todas</option>
        <option value="paletas" {{#if (eq query "paletas")}}selected{{/if}}>Paletas</option>
        <option value="calzado" {{#if (eq query "calzado")}}selected{{/if}}>Calzado</option>
        <option value="accesorios" {{#if (eq query "accesorios")}}selected{{/if}}>Accesorios</option>
        <option value="indumentaria" {{#if (eq query "indumentaria")}}selected{{/if}}>Indumentaria</option>
        <option value="disponibles" {{#if (eq query "disponibles")}}selected{{/if}}>Solo disponibles</option>
      </select>
    </div>
    <div class="col-md-4">
      <label class="form-label">Orden</label>
      <select class="form-select" name="sort">
        <option value="">Sin orden</option>
        <option value="asc" {{#if (eq sort "asc")}}selected{{/if}}>Precio ascendente</option>
        <option value="desc" {{#if (eq sort "desc")}}selected{{/if}}>Precio descendente</option>
      </select>
    </div>
    <div class="col-md-4 d-flex align-items-end">
      <button type="submit" class="btn btn-primary w-100">
        <i class="fa-solid fa-filter"></i> Filtrar
      </button>
    </div>
  </form>

  <!-- Lista de productos -->
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {{#each products}}
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text mb-2">
              <span class="badge bg-secondary"><i class="fa-solid fa-tag"></i> {{category}}</span>
            </p>
            <p class="fs-5 fw-bold text-primary mb-4">{{formatCurrency price}}</p>
            <div class="mt-auto d-flex gap-2">
              <a href="/products/{{_id}}" class="btn btn-outline-primary">
                <i class="fa-solid fa-eye"></i> Ver detalle
              </a>
              <button class="btn btn-primary" data-product-id="{{_id}}">
                <i class="fa-solid fa-cart-plus"></i> Agregar
              </button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Paginación -->
  <nav class="mt-4 d-flex justify-content-between align-items-center">
    <div>
      {{#if hasPrevPage}}
        <a class="btn btn-outline-secondary" href="/products?page={{prevPage}}&limit=10&query={{query}}&sort={{sort}}">
          <i class="fa-solid fa-arrow-left"></i> Anterior
        </a>
      {{/if}}
    </div>
    <span class="text-muted">Página {{page}} de {{totalPages}}</span>
    <div>
      {{#if hasNextPage}}
        <a class="btn btn-outline-secondary" href="/products?page={{nextPage}}&limit=10&query={{query}}&sort={{sort}}">
          Siguiente <i class="fa-solid fa-arrow-right"></i>
        </a>
      {{/if}}
    </div>
  </nav>
</div>

<!-- Script para agregar al carrito -->
<script>
  window.cartId = "{{cartId}}";
</script>
<script src="/js/cart.js"></script>