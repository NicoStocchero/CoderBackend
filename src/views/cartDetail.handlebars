<!-- Estilos Font Awesome -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
/>

<div class="container">
  <h1 class="mb-4"><i class="fa-solid fa-cart-shopping"></i> Mi Carrito</h1>

  {{#if cart.products.length}}
    <div class="list-group mb-3">
      {{#each cart.products}}
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1">{{this.product.title}}</h5>
            <small class="text-muted">Precio: {{formatCurrency this.product.price}} â€¢ Cantidad: {{this.quantity}}</small>
          </div>
          <div class="d-flex align-items-center gap-3">
            <span class="fw-bold">Subtotal: {{formatCurrency (multiply this.product.price this.quantity)}}</span>
            <form method="POST" action="/api/carts/{{../cart._id}}/products/{{this.product._id}}?_method=DELETE">
              <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="fa-solid fa-trash"></i>
              </button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>

    <div class="d-flex justify-content-end">
      <div class="card">
        <div class="card-body d-flex align-items-center gap-3">
          <span class="fs-5">Total:</span>
          <span class="fs-4 fw-bold text-success">{{formatCurrency total}}</span>
        </div>
      </div>
    </div>
  {{else}}
    <p>No hay productos en este carrito.</p>
  {{/if}}

  <div class="mt-4">
    <a href="/products" class="btn btn-outline-secondary">
      <i class="fa-solid fa-arrow-left"></i>
      Seguir comprando
    </a>
  </div>
</div>